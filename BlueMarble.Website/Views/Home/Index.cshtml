@{
    ViewBag.Title = "Address Search";
}

<!-- Shows text in a blue window at the top of the index page" -->
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <font size="3">With 200,000 images of Earth, you're bound to find something interesting.  Search an address and see what you find!</font> 
        </div>
    </section>
}

<!-- Start the form to postback the address -->
@using (Html.BeginForm("SearchImages", "Home"))
{
    <table>
        <tr>
            <td>
                @Html.Label("Location:  ")
            </td>
            <td>
                <input type=text id="Address" name="Address" style="width: 600px" />
            </td>
            <td>
                <button type="submit">Search Images</button>
            </td>
        </tr>
    </table>
}

