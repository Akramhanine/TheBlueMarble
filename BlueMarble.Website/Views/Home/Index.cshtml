@{
    ViewBag.Title = "Address Search";
}

<!-- Shows text in a blue window at the top of the index page" -->
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <font size="3">With over a million pictures from space and counting, almost every square inch of this planet has been photographed.  Go ahead and search an address.  There will be many pictures to see!</font> 
        </div>
    </section>
}

<!-- Start the form to postback the address -->
@using (Html.BeginForm("SearchImages", "Home"))
{
<table>
    <tr>
        <td>
            @Html.Label("Address:  ")
        </td>
        <td>
            <input type=text id="Address" name="Address" style="width: 600px" />
        </td>
        <td>
            <button type="submit">Search Images</button>
        </td>
    </tr>
</table>
}
